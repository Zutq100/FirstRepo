<Window x:Class="AdvertisingAgency.AddOrUpdateReviewsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdvertisingAgency"
        mc:Ignorable="d"
        Title="AddOrUpdateReviewsWindow" Height="230" Width="211" ResizeMode="NoResize" Closed="Window_Closed">
    <Grid Background="DeepSkyBlue">
        <StackPanel Margin="0,10">
            <DockPanel>
                <Label Content="Заказ" Height="30" VerticalAlignment="Top"/>
                <ComboBox Width="150" Height="30" VerticalAlignment="Top" Name="cmbOrders"/>
            </DockPanel>
            <DockPanel Margin="0,10">
                <Label Content="Отзыв:" HorizontalAlignment="Center" Height="30"/>
                <TextBox Width="150" Height="60" HorizontalAlignment="Left" TextWrapping="Wrap" Name="tbReviews"/>
            </DockPanel>
            <Button Content="Принять" Height="30" Width="100" VerticalAlignment="Bottom" Name="btnAccept" Click="btnAccept_Click"/>
            <Button Content="Отменить" Height="30" Width="100" VerticalAlignment="Bottom" Name="btnCancel" Click="btnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
